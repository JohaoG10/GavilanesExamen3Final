<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GavilanesExamen3Final"
             x:Class="GavilanesExamen3Final.ViewsJG.PaisesGuardadosJG"
             Title="Paises Guardados">

    <CollectionView x:Name="PaisesListView" ItemsSource="{Binding PaisesConsultados}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <StackLayout Padding="10" Orientation="Horizontal">
                    <Label Text="{Binding PaisNombre}" FontSize="20" VerticalOptions="Center" />
                    <Label Text="{Binding ZonaGeografica}" FontSize="16" VerticalOptions="Center" Margin="10,0,0,0" />
                </StackLayout>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>
