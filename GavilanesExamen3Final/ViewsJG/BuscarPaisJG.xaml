<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:GavilanesExamen3Final"
             x:Class="GavilanesExamen3Final.ViewsJG.BuscarPaisJG"
             Title="Buscar País">

    <StackLayout Padding="10">
        <Entry x:Name="PaisNombreEntry" Text="{Binding PaisNombre}" Placeholder="Ingresa el nombre del país" />
        <Button Text="Buscar" Command="{Binding BuscarComando}" />
        <Label Text="{Binding MensajeError}" TextColor="Red" IsVisible="{Binding IsErrorVisible}" />

        <Label Text="Nombre del País" TextColor="Black" />
        <Label Text="{Binding PaisNombre}" />

        <Label Text="Región" TextColor="Black" />
        <Label Text="{Binding ZonaGeografica}" />

        <Label Text="Enlace de Mapa" TextColor="Black" />
        <Label Text="{Binding EnlaceMapa}" />

        <Button Text="Limpiar" Command="{Binding LimpiarComando}" />
    </StackLayout>
</ContentPage>
